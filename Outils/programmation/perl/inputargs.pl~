#!/usr/bin/perl -w

use strict;
use warnings;
use feature qw/switch/; #Pour given ... when

my $arg;

#Main function start

print ("\n");

if ( ! @ARGV)
#if ( !defined @ARGV) anciennement, mais mis Ã  jour avec version et maintenant plus besoin de defined
{
  print ( "\nNo input argument\n" ) ;
}
else
{
  foreach $arg (@ARGV)
  {
    print ( "$arg\n" ) ;
    f_help() if ( $arg =~ m/-help/ ) ;
    f_check() if ( $arg =~ m/-check/ ) ;
    f_param() if ( $arg =~ m/-param/ ) ;
    f_bkp() if ( $arg =~ m/-bkp/ ) ;
    push @args, "$arg";
  }
  f_getargs(\@args) ;
}

print("\n");

